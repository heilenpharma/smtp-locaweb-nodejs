{
  "name": "smtp-locaweb-nodejs",
  "version": "1.0.1",
  "description": "NPM library to make usage of Locaweb transactional email service API with NodeJS",
  "homepage": "http://www.locaweb.com.br/produtos/smtp-locaweb.html",
  "main": "index.js",
  "scripts": {
    "test": "mocha; mocha test --require blanket --reporter html-cov > test/coverage.html"
  },
  "keywords": [
    "email",
    "smtp",
    "api",
    "locaweb",
    "transactional"
  ],
  "author": "Kemel Zaidan <kemel.zaidan@locaweb.com.br>",
  "contributors": [
    "Eron Junior <eron.junior@locaweb.com.br>"
  ],
  "license": "MIT",
  "dependencies": {
    "dotenv": "^1.1.0",
    "request": "^2.55.0"
  },
  "devDependencies": {
    "blanket": "^1.1.7",
    "chai": "^2.3.0",
    "mocha": "^2.2.5",
    "sinon": "^1.14.1",
    "sinon-chai": "^2.7.0"
  },
  "config": {
    "blanket": {
      "pattern": [
        "index.js",
        "email.js"
      ],
      "data-cover-never": [
        "node_modules",
        "token.js"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/locaweb/smtp-locaweb-nodejs.git"
  }
}
